<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- 配置action的拓展名 -->
	<constant name="struts.action.extension" value="action,will,,"/>
	<constant name="struts.devMode" value="true"/>
	<constant name="struts.ui.theme" value="simple"/>
	
	 <package name="pkg" extends="struts-default" namespace="/">
		<!-- 定义自己的拦截器栈 -->
	 	<interceptors>
	 		<interceptor name="checkLogin" class="com.chenjin.Web.Interceptor.checkLoginInterceptor"/>
	 		<interceptor name="security" class="com.chenjin.Web.Interceptor.securityInterceptor"/>
	 		<interceptor-stack name="myStack">
	 			<interceptor-ref name="checkLogin"/>
	 			<interceptor-ref name="security"/>
	 			<interceptor-ref name="paramsPrepareParamsStack"/>
	 		</interceptor-stack>	
	 	</interceptors>
	 	
	 	<!-- 默认的拦截器 -->
	 	<default-interceptor-ref name="myStack"/>
	 	
	 	<!-- 全局的结果视图 -->
	 	<global-results>
	 		 <result name="login">/WEB-INF/views/login.jsp</result>
	 		 <result name="nopermission">/WEB-INF/views/common/nopermission.jsp</result>
	 	</global-results>
	 	
	 	<action name="login" class="loginAction">
	 		<interceptor-ref name="paramsPrepareParamsStack"/>
	 		<result name="success">/WEB-INF/views/main.jsp</result>
	 	</action>
	 	<action name="*_*" class="{1}Action" method="{2}">
	 		<result name="success" type="redirectAction">{1}</result>
	 		<result name="list">/WEB-INF/views/{1}/list.jsp</result>
	 		<result name="input">/WEB-INF/views/{1}/input.jsp</result>
	 	</action>
	 </package>
</struts>
